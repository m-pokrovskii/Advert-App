rupture.scale        = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'
va()
	position: relative;
	top: 50%; 
	transform: translateY(-50%);
	
// 
	
.app 
	position fixed
	width 100%; height 100%
	top 0; left 0; right 0; bottom 0;
	font-family Arial
	font-size 62.5%
	line-height 1.8em; 
	background #fff
	+above("s", orientation: landscape)
		font-size 62.5%
		line-height 1.8em
	+above("m", orientation: landscape)
		font-size 80%
		line-height 1.8em
	+above("l", orientation: landscape)
		font-size 120%
		line-height 1.8em
	+above("xl", orientation: landscape)
		font-size 140%
		line-height 1.8em
	@media (max-height: 479px) and (orientation: portrait)
		font-size 60%
		line-height 1.5em;
	@media (min-height: 568px) and (orientation: portrait)
		font-size 70%
		line-height 1.8em;
	@media (min-height: 667px) and (orientation: portrait)
		font-size 80%
		line-height 1.8em;
	@media (min-height: 1024px) and (orientation: portrait)
		font-size 140%
		line-height 1.8em;
	
		
.app * 
	box-sizing border-box
	margin 0
	padding 0  

.app__wrapper
	width 100% 
	height 100%
	+above("s", orientation: landscape)
		height auto 
		va()

.app__container
	position relative
	height 100%
	width 100% 
	+above("s", orientation: landscape)
		display table
		height 100%

.only-portrait
	display block
.only-landscape
	display none

+above("s", orientation: landscape)
	.only-portrait
		display none
	.only-landscape
		display block

.app__content-wrapper
	height 100% 
	+above("s", orientation: landscape)
		height 90%

.app__top
	position relative
	height 65%
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		padding 2% 0 

.app__bottom
	position relative
	height 30%
	padding 1em
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		vertical-align bottom
		padding 2%

.app__footer 
	height 5%
	width 100%
	padding 0 2em 0.5em 2em
	+above("s", orientation: landscape)
		position relative
		padding-right 0
		padding-left 0
		margin-top -3% 

.app__headline
	font-size 1.5em; font-weight 700  
	height 17%
	text-align center
	+above("s", orientation: landscape)
		position relative
		padding 0 1em 
		height 17%
	
.app-headline__text
	display block
	padding 0.4em 1em 0.4em 1em
	va()
	

.app__desc
	height 100%
	+above("s", orientation: landscape)
		height 78% 

.app__image-container
	position relative
	text-align center
	margin 0 auto
	height 83%
	+above("s", orientation: landscape)
		padding 0 
		width 100% 
		height 100%
		margin 0 auto
	img
		width auto
		height 100% 
		+above("s", orientation: landscape)
			display block
			width 100%
			height auto

.app_desc__table
	va()
	width 100%
	border-spacing 0
	border-collapse collapse	
	td
		padding 0.5em 0
		
				
.app-desc__title
	font-size 1.5em 
	font-weight bold
	white-space nowrap
	text-align center
	+above("s", orientation: landscape)
		font-size 2em 


.app-desc__desc
	font-size 1.3em
	text-align center
			
.app__button-container
	text-align center

.app__btn
	background: linear-gradient(to bottom,  rgba(244,217,17,1) 0%,rgba(246,183,18,1) 100%);
	box-shadow: 0 2px 12px rgba(153, 153, 153, 0.5);
	display inline-block
	font-size 1.5em
	font-weight bold 
	text-decoration none
	color #000
	padding 0.5em 3em
			
.app__powered-by 
	float left
	width 15%
	+above("s", orientation: landscape)
		width 20% 
	img 
		width 100%
	
.app__skip
	float right
	
.app__skip-link
	display block
	color #a7a7a7
	text-decoration none
	font-size 1em 
	line-height 1 !important 