rupture.scale        = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'
va()
	position: relative;
	top: 50%; 
	transform: translateY(-50%);
		
// 
	
html
	font-size 62.5% !important
	line-height 1.8em !important
	font-family Arial !important
	overflow hidden
	+above("s", orientation: landscape)
		font-size 62.5% !important
		line-height 1.8em !important
	+above("m", orientation: landscape)
		font-size 80% !important
		line-height 1.8em !important
	+above("l", orientation: landscape)
		font-size 120% !important
		line-height 1.8em !important
	+above("xl", orientation: landscape)
		font-size 140% !important
		line-height 1.8em !important
	@media (max-height: 479px) and (orientation: portrait)
		font-size 60% !important
		line-height 1.5em !important
	@media (min-height: 500px) and (orientation: portrait)
		font-size 70% !important
		line-height 1.8em !important
	@media (min-height: 560px) and (orientation: portrait)
		font-size 65% !important
		line-height 1.7em !important
	@media (min-height: 639px) and (orientation: portrait)
		font-size 80% !important
		line-height 1.8em !important
	@media (min-height: 700px) and (orientation: portrait)
		font-size 100% !important
		line-height 1.8em !important
	@media (min-height: 750px) and (orientation: portrait)
		font-size 120% !important
		line-height 1.8em !important
	@media (min-height: 950px) and (orientation: portrait)
		font-size 140% !important
		line-height 1.8em !important

body
	font-size 1em !important
	overflow hidden

body, .ddd123-app
	position fixed
	z-index 2147483647
	width 100%; height 100%
	top 0; left 0; right 0; bottom 0;	
	background #fff
	color #000 !important 
		
.ddd123-app * 
	box-sizing border-box
	margin 0
	padding 0  

.ddd123-app__wrapper
	width 100% 
	height 100%
	+above("s", orientation: landscape)
		height auto
		va()

.ddd123-app__container
	position relative
	height 100%
	width 100% 
	+above("s", orientation: landscape)
		display table
		height 100%

.only-portrait
	display block
.only-landscape
	display none

+above("s", orientation: landscape)
	.only-portrait
		display none
	.only-landscape
		display block

.ddd123-app__content-wrapper
	height 100% 

.ddd123-app__top
	position relative
	height 62%
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		padding 3.5% 0 3% 0 

.ddd123-app__bottom
	position relative
	height 33%
	padding 1em
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		vertical-align bottom
		padding 3.5% 2% 3% 2%

.ddd123-app__footer 
	height 5%
	width 100%
	padding 0 2em 0.5em 2em
	+above("s", orientation: landscape)
		position relative
		padding-right 0
		padding-left 0
		margin-top -3% 

.ddd123-app__headline
	font-size 1.5em; font-weight 700  
	height 17%
	text-align center
	+above("s", orientation: landscape)
		position relative
		padding 0 1em 
		height 17%
	
.ddd123-app__headline__text
	display block
	padding 0.4em 1em 0.4em 1em
	va()
	

.ddd123-app__desc
	height 100%
	+above("s", orientation: landscape)
		height 78%

.ddd123-app__image-container
	position relative
	text-align center
	margin 0 auto
	height 83%
	+above("s", orientation: landscape)
		padding 0 
		width 100% 
		height 100%
		margin 0 auto
	img
		width auto
		height 100% 
		display inline-block
		+above("s", orientation: landscape)
			display block
			width 90%
			margin 0 auto 
			height auto

.ddd123-app__app-desc__table
	width 100%
	height auto
	margin-top -0.5em 
	border-spacing 0
	border-collapse collapse	
	font-size 1em 
	td
		padding 0.5em 0
		vertical-align top
	+above("s", orientation: landscape)
		position relative
		top 0.5em
		height auto
		
				
.ddd123-app__app-desc__title
	font-size 1.5em 
	font-weight bold
	white-space nowrap
	text-align center
	margin-bottom 0.5em 
	+above("s", orientation: landscape)
		font-size 2em 


.ddd123-app__app-desc__desc
	font-size 1.3em
	text-align center
	width: 100%;
	max-height: 3em;
	max-width: 100%;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
	overflow: hidden;
			
.ddd123-app__button-container
	text-align center

.ddd123-app__btn
	background: linear-gradient(to bottom,  rgba(244,217,17,1) 0%,rgba(246,183,18,1) 100%);
	box-shadow: 0 2px 12px rgba(153, 153, 153, 0.5);
	display inline-block
	font-size 1.6em
	font-weight bold 
	text-decoration none
	color #000
	padding 1em 3em
	+above("s", orientation: landscape)
		font-size 1.5em
		white-space nowrap
				
.ddd123-app__powered-by 
	float left
	width 15%
	+above("s", orientation: landscape)
		width 20% 
	img 
		width 100%
	
.ddd123-app__skip
	float right
	
.ddd123-app__skip-link
	display block
	color #a7a7a7
	text-decoration none
	font-size 1.2em 
	line-height 1 !important 
	padding 0.3em
	margin-top -0.3em 