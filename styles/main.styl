rupture.scale        = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

.app 
	position fixed
	width 100%; height 100%  
	top 0; left 0; right 0; bottom 0;
	font-family Arial
	font-size: 62.5%;

.app * 
	box-sizing border-box
	margin 0
	padding 0  

.app__container
	height 100%
	width 100%  
	+above("s", orientation: landscape)
		display table 
		position: relative;
		top: 50%; 
		transform: translateY(-50%);
		width 100%
		height auto

.only-portrait
	display block
.only-landscape
	display none

+above("s", orientation: landscape)
	.only-portrait
		display none
	.only-landscape
		display block

.app__top
	position relative
	height 65% 
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100% 
		vertical-align middle

.app__bottom
	position relative
	height 35%
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100% 
		vertical-align middle

.app__headline
	font-size 1.5em; font-weight 700  
	text-align center
	padding 10px 0
	+above("m", orientation: landscape)
		font-size 2.5em 
	+above("m", orientation: portrait)
		font-size 4em 
	

.app__desc
	padding 0 10px 
	+above("s", orientation: landscape)
		display inline
		position: relative;
		top: 50%; 
		transform: translateY(-50%);

.app__image-container
	position relative
	text-align center
	margin 0 auto 10px auto
	height 70%
	+above("s", orientation: landscape)
		width 100% 
		height 100%
		margin 0 auto
	img
		width auto
		height 100% 
		+above("s", orientation: landscape)
			display block
			width 100%
			height auto
		
				
.app-desc__title
	font-size 1.5em 
	font-weight bold
	white-space nowrap
	text-align center
	margin 0 0 5px 0
	+above("m", orientation: landscape)
		font-size 2.5em 
	+above("m", orientation: portrait)
		font-size 4em 
	+above("l", orientation: landscape)
		font-size 4em 
	
.app-desc__desc
	font-size 1.2em
	text-align center
	margin-bottom 10px
	padding 0 10px 
	@media (min-height: 481px)
		font-size 1.8em 
	+above("m", orientation: landscape)
		font-size 1.8em 
	+above("m", orientation: portrait)
		font-size 2.8em
		margin-top 30px 
		margin-bottom 30px 
	+above("l", orientation: landscape)
		font-size 3em 
		margin 20px 0 
		
.app__button-container
	text-align center

.app__btn
	background: linear-gradient(to bottom,  rgba(244,217,17,1) 0%,rgba(246,183,18,1) 100%);
	box-shadow: 0 2px 12px rgba(153, 153, 153, 0.5);
	display inline-block
	font-size 1.2em 
	text-decoration none
	color #000
	padding 3% 10%
	@media (min-height: 481px)
		font-size 2em 
	+above("m", orientation: landscape)
		font-size 1.8em 
	+above("m", orientation: portrait)
		font-size 3em 
	
.app__footer 
	position absolute; bottom 10px; padding 0 10px 
	width 100%
	+above("s", orientation: landscape)
		width 50%
		left 50%
		padding 0 20px 
	+above("m", orientation: portrait)
		padding 0 20px 
	
.app__powered-by 
	float left
	width 20%
	+above("m", orientation: portrait)
		width 15% 
	img 
		width 100%
	
.app__skip
	float right
	
.app__skip-link
	color #a7a7a7
	text-decoration none
	font-size 1.2em 
	+above("l", orientation: landscape)
		font-size 2em 
	+above("m", orientation: portrait)
		font-size  2em
	

